<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>images\icon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="fonts\Pretendard-Regular.ttf" />
    <None Remove="middle.png" />
    <None Remove="power.png" />
    <None Remove="timer.png" />
    <None Remove="timer_no.png" />
    <None Remove="timer_no_num.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="images\icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="fonts\Pretendard-Regular.ttf" />
    <Resource Include="middle.png" />
    <Resource Include="power.png" />
    <Resource Include="timer.png" />
    <Resource Include="timer_no.png" />
    <Resource Include="timer_no_num.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MaterialDesignThemes" Version="5.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="PixiEditor.ColorPicker" Version="3.4.1" />
  </ItemGroup>

</Project>
